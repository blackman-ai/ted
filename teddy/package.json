{
  "name": "teddy",
  "version": "0.1.0",
  "description": "Offline-first AI coding environment powered by Ted",
  "main": "out/main/index.js",
  "author": "Blackman Artificial Intelligence Technologies Inc.",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run build:rust && electron-vite build && electron-builder",
    "build:dir": "npm run build:rust && electron-vite build && electron-builder --dir",
    "build:rust": "bash scripts/build-rust-cli.sh",
    "build:linux:arm64": "npm run build:rust arm64 && electron-vite build && electron-builder --linux --arm64",
    "build:linux:x64": "npm run build:rust x64 && electron-vite build && electron-builder --linux --x64",
    "preview": "electron-vite preview",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/tar": "^6.1.13",
    "chokidar": "^3.6.0",
    "electron-store": "^10.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tar": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.6.3"
  },
  "build": {
    "appId": "com.blackman-ai.teddy",
    "productName": "Teddy",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "../target/release/",
        "to": "bin/",
        "filter": [
          "ted",
          "ted.exe"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
